<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result"
        android:layout_marginTop="100dp"
        android:textSize="50dp"
        />

    <TextView
        android:id="@+id/calculation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:textSize="50dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/one"
        android:layout_below="@+id/calculation"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/two"
        android:layout_toRightOf="@+id/one"
        android:layout_below="@+id/calculation"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/three"
        android:layout_toRightOf="@+id/two"
        android:text="3"
        android:layout_below="@+id/calculation"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/plus"
        android:layout_toRightOf="@+id/three"
        android:text="+"
        android:layout_below="@+id/calculation"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/four"
        android:layout_below="@+id/one"
        android:text="4" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:layout_below="@+id/two"

        android:id="@+id/five"
        android:layout_toRightOf="@+id/four"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:layout_toRightOf="@+id/five"
        android:id="@+id/six"
        android:layout_below="@+id/three"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/minus"
        android:layout_toRightOf="@+id/six"
        android:layout_below="@+id/plus"
        android:text="-"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:layout_below="@+id/four"
        android:id="@+id/seven"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:layout_toRightOf="@+id/seven"
        android:id="@+id/eight"
        android:layout_below="@+id/five"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/decimal"
        android:layout_below="@+id/seven"
        android:text="."/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zero"
        android:layout_toRightOf="@+id/decimal"
        android:layout_below="@id/eight"
        android:text="0"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/equals"
        android:layout_toRightOf="@+id/zero"
        android:layout_below="@+id/nine"
        android:text="="/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:layout_toRightOf="@+id/eight"
        android:id="@+id/nine"
        android:layout_below="@+id/six"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/multiply"
        android:layout_toRightOf="@+id/nine"
        android:layout_below="@+id/minus"
        android:text="*"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/divide"
        android:layout_toRightOf="@+id/equals"
        android:layout_below="@+id/multiply"
        android:text="/"/>



















</RelativeLayout>